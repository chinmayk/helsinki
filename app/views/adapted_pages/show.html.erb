    <div id="homeheader">
      <h1 id="logo"><img src="<%=resolve(@adapted_page.logo_src, @adapted_page.url)%>" alt="Logo"> by Helsinki</h1>
    </div>
  <% end %>
  <div id="page-content">
  <%= sanitize @adapted_page.page_content %>
  </div>
  <div data-role="footer">
    <h4>Switch to <%= link_to 'Original page', @adapted_page.url %> |
<%= link_to 'Back', adapted_pages_path %> </h4>
  </div>

